.navbar
  background-color #343a40
  display flex
  flex-direction row
  justify-content flex-end
  padding .1rem 1rem

  &-list
    display flex
    padding 0

    &__item
      list-style none

      a
        border-radius  .1rem
        color hsla(0,0%,100%,.5)
        font-size .8rem
        padding .4rem .6rem
        text-decoration none

        &:hover
          background-color hsla(0, 0, 100%, .4)
          color hsla(0, 0%, 100%, .9)

        &.active
          color hsla(0, 0, 100%, .9)