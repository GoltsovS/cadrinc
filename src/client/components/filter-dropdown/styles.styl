.filter-dropdown
  &__container
    background-color #f0f0f0
    border-radius .2rem
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top .3rem
    padding 1rem

  &__button
    background-color #f0f0f0
    border none
    color #343a40
    position relative

    &:hover
      color #fff

    &.active:before
      background-color #f0f0f0
      content ''
      height 20px
      left 0
      position absolute
      top 100%
      width 100%