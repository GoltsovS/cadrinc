.filter-dropdown
  &__container
    background-color #f0f0f0
    border-radius .2rem
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top .3rem
    padding 1rem

  &__button
    background-color #f0f0f0
    border-color #f0f0f0
    color #343a40
    font-size .8rem
    position relative

    &:hover
      color #fff

    &.active:before
      background-color #f0f0f0
      content ''
      height 20px
      left -1px
      position absolute
      top 100%
      width calc(100% + 2px)