.filter-dropdown
  &__container
    background-color #f0f0f0
    border-radius .2rem
    margin-top .5rem
    padding 1rem

  &__button
    background-color #f0f0f0
    border none
    color #343a40
    position relative

    &:hover
      color #fff

    &.active:before
      background-color #f0f0f0
      content ''
      height 100%
      left 0
      position absolute
      top 100%
      width 100%