.switch
  span
    font-size .7rem
  input
    display none

    &:checked
      + label
        background #26a9e0

        &:after
          left calc(100% - 2px)
          transform translateX(-100%)

  label
    cursor pointer
    text-indent -9999px
    width 40px
    height 20px
    background grey
    display block
    border-radius 14px
    position relative

    &:after
      content ''
      position absolute
      top 2px
      left 2px
      width 16px
      height 16px
      background #fff
      border-radius 10px
      transition 0.3s

    &:active
      &:after
        width 15px