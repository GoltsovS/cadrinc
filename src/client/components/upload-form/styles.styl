.upload-form
  display flex
  flex-direction column

  &__row
    display flex
    justify-content center
    margin-bottom 1rem
    margin-top 1rem

  &__buttons
    justify-content space-around

  &__button
    background-color #fff
    border 1px solid #26A9E0
    border-radius .2rem
    padding 1rem

    &:hover
      background-color #26A9E0
      color #fff
